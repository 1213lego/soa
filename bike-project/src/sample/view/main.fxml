<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.MainController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Bikes">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openWindowSaveBike" text="Add bike" />
                        <MenuItem mnemonicParsing="false" onAction="#openWindowDeleteBike" text="Delete bike" />
                        <MenuItem mnemonicParsing="false" onAction="#openWindowUpdateBike" text="Update bike" />
                        <MenuItem mnemonicParsing="false" onAction="#openWindowBikeList" text="Bike list" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onClickAbout" text="About Bike App" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
      <BorderPane prefHeight="369.0" prefWidth="640.0">
         <center>
            <ImageView fitHeight="363.0" fitWidth="941.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@images/Bike.png" />
               </image></ImageView>
         </center>
      </BorderPane>
    </children>
</VBox>
